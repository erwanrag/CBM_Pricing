# === ENVIRONNEMENT ===
CBM_ENV=prod

# === SQL SERVER ===
SQL_SERVER=your_server.domain.local
SQL_DATABASE=CBM_DATA
SQL_USER=your_sql_user
SQL_PASSWORD=your_secure_password

# === REDIS ===
REDIS_HOST=localhost
REDIS_PORT=6379

# === DATABASE URL (URL-encoded) ===
DATABASE_URL=mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+17+for+SQL+Server&TrustServerCertificate=yes

# === JWT SECRET (générer avec : openssl rand -hex 32) ===
SECRET_KEY=your_super_secret_key_here

# === LOGS ===
cbm_log_dir=./logs

# === CORS FRONTEND ===
FRONTEND_HOST=10.103.3.11
FRONTEND_PORTS=5173